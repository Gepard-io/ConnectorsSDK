{
    "name": "gepardio/connectors-sdk",
    "description": "SDK to simplify building connectors for Gepard SaaS Platform",
    "keywords": [
        "SDK",
        "Gepard",
        "Taxonomy",
        "Product"
    ],
    "homepage": "https://gepard.io",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Gepard Development Team",
            "homepage": "https://gepard.io"
        }
    ],
    "support": {
        "source": "https://github.com/Gepard-io/ConnectorsSDK"
    },
    "require": {
        "php": ">=8.1.0",
        "beberlei/assert": "^3.3",
        "league/config": "^1.1",
        "psr/log": "^1.1 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.7",
        "guzzlehttp/guzzle": "^7.4",
        "symfony/dotenv": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "GepardIO\\ConnectorsSDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GepardIO\\ConnectorsSDK\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "scripts": {
        "test:unit": "vendor/bin/phpunit --testsuite unit",
        "test:integration": "vendor/bin/phpunit --testsuite integration",
        "static-analysis": "vendor/bin/phpstan"
    }
}
